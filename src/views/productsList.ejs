<!DOCTYPE html>
<html lang="en">

<%- include('partials/head', {title: 'Home' }) %>

    <body class="home">
        <div class="home-box">

            <header class="home__header">
                <div class="home__header__div1">
                    <div class="home__header__div1--bars-logo">
                        <a onclick="document.querySelector('.home__header__nav__div1').classList.toggle('showMenu')"><i
                                class="fa-sharp fa-solid fa-bars"></i></a>
                        <div class="home__header--logo rotate-in-center">
                            <a href="/"><img src="/images/logoIsra.png" alt="logo-d-toke"></a>
                        </div>
                    </div>
                    <div class="home__header__div1--glass-truck">
                        <a href="/products/productsList"><i class="fa-solid fa-magnifying-glass"></i></a>
                        <a href="/products/cart"><i class="fa-solid fa-truck-fast slide-in-blurred-left"></i></a>
                    </div>
                </div>
                <div class="home__header__div2">

                    <div class="home__header__div2--heartru">
                        <a href=""><i class="fa-regular fa-heart heartbeat"></i></a>

                        <% if (locals.userLogin) { %>
                            <a class="onlyFor_mobile-tablet" href="/products/cart"><i
                                    class="fa-solid fa-truck-fast slide-in-blurred-left"></i></a>
                    </div>

                    <% }else{ %>
                        <a class="onlyFor_mobile-tablet" href="/users/login"><i
                                class="fa-solid fa-truck-fast slide-in-blurred-left"></i></a>
                        <% } %>
                </div>
        </div>
        <nav class="home__header__nav">
            <div class="home__header__nav__div">
                <div class="home__header__nav--logo rotate-in-center">
                    <a href="/"><img src="/images/logoIsra.png" alt=""></a>
                </div>
                <div class="home__header__nav__div1">
                    <a class="nav-item onlyFor_mobile-tablet" href="/">Inicio</a>

                    <a class="nav-item" href="">tendencia</a>
                    <% if (locals.userLogin) { %>

                        <a class="nav-item login__mobile" href="/users/profile">Hola <%= userLogin.name %>!</a>
                        <a class="nav-item login__mobile" href="/users/logout">salir</a>


                        <% }else{ %>
                            <a class="login__mobile nav-item" href="/users/login">ingresar</a>
                            <% } %>
                                <% if (locals.userLogin) { %>
                                    <% if (userLogin.role===1 ) { %>
                                        <a class="nav-item" href="/admin">Dashboard ADM</a>
                                        <a class="login__mobile nav-item" href="/products/cart">Carrito</a>
                                        <% } %>

                                            <% }else{ %>

                                                <% } %>

                </div>
                <div class="home__header__nav__div2">
                    <a href=""><i class="fa-regular fa-heart heartbeat"></i></a>

                    <% if (locals.userLogin) { %>
                        <a class="onlyFor_desktop" href="/products/cart"><i
                                class="fa-solid fa-truck-fast slide-in-blurred-left"></i></a>

                        <% }else{ %>
                            <a class="onlyFor_desktop" href="/users/login"><i
                                    class="fa-solid fa-truck-fast slide-in-blurred-left"></i></a>
                            <% } %>

                                <% if (locals.userLogin) { %>
                                    <div class="home__header__nav__div1">
                                        <a class="nav-item" href="/users/profile">Hola <%= userLogin.name %>!</a>
                                        <a class="nav-item" href="/users/logout">salir</a>
                                    </div>

                                    <% }else{ %>
                                        <button class="home__header--button"><a
                                                href="/users/login">ingresar</a></button>
                                        <% } %>

                </div>
            </div>
        </nav>
        </header>

        </div>
        <main class="home__main">

            <!-- DESKTOP VIEW -->
            <section class="home__main__section__desktopage onlyFor_desktop">

                <form class="d-flex justify-content-start onlyFor_desktop" role="search" action="/search" method="GET">
                    <input class="form-control me-2" type="text" name="keywords" placeholder="Buscar zapatilla..."
                        aria-label="Search">
                    <button class="btn btn-outline-success" type="submit"><a href=""><i
                                class="fa-solid fa-magnifying-glass"></i></a></button>
                </form>


                <section class="home__main__section-cards">
                    <div class="home__main__section__cards-container-desktop">
                        <% productsList.forEach(product=> { %>
                            <%- include('partials/productsListCards',{ ...product.dataValues, toThousand }) %>
                                <% }) %>
                    </div>
                </section>

            </section>
            <!-- ******************* tablet section *********************** -->

            <section class="productsList__section-cards onlyFor_desktop">
                <form class="d-flex justify-content-start productsList__buscador" role="search" action="/search"
                    method="GET">
                    <input class="form-control me-2" type="text" name="keywords" placeholder="Buscar zapatilla..."
                        aria-label="Search">
                    <button class="btn btn-outline-success" type="submit"><a href=""><i
                                class="fa-solid fa-magnifying-glass"></i></a></button>
                </form>
                <div class="productsList__section__cards-container">
                    <% productsList.forEach(product=> { %>
                        <%- include('partials/productsListCards',{ ...product.dataValues, toThousand }) %>
                            <% }) %>
                </div>
            </section>
        </main>

        <%- include('partials/footer') %>

            <!-- AOS -->
            <script>
                AOS.init();
            </script>
            <!-- Swiper JS -->
            <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
            <!-- boostrap -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
                crossorigin="anonymous"></script>

    </body>

</html>
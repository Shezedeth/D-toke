<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- boostrap-css -->
    <script src="https://kit.fontawesome.com/e4646141a1.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <!-- Animated -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <!-- AOS -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
   <!-- Link Swiper's CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <!-- css de los pibe -->
    <link rel="stylesheet" href="/css/styles.css">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <title>D-toke | <%= model %> </title>
</head>

  <body class="editProduct__container-product">
    <div class="editProduct__container-product-content">
      <%- include('partials/header')%>
      <div class="container">
        <form class="product-form shadow card" action="/admin/editProduct/<%= id %>?_method=PUT" method="POST" enctype="multipart/form-data" id="formEdit">
          <h1 class="container-title card-title">Editar producto </h1>
          <div class="product-form-contentNamePrice">
            <div class="form-group">
            <!-- model -->
              <label class="form-group__label" for="name">Nombre del producto:</label>
              <input class="form-control <%= locals.errors && (errors.name && 'is-invalid') %>" type="text" id="name" name="name" value="<%= model %>" />
              <small class="text-danger ms-2" id="msgError-name">
                <%= locals.errors && (errors.name && errors.name.msg) %>
              </small>
            </div>
            <div class="form-group">
            <!-- price -->
              <label class="form-group__label" for="price">Precio:</label>
              <input class="form-control <%= locals.errors && (errors.price && 'is-invalid') %>" type="number" id="price" name="price" step="0.01" value="<%= price %>"/>
              <small class="text-danger ms-2" id="msgError-price">
                <%= locals.errors && (errors.price && errors.price.msg) %>
              </small>
            </div>
          </div>
          <div class="product-form-contentNamePrice">
            <div class="form-group">
              <label class="form-group__label" for="image">Cambiar imagen</label>
              <input class="form-group__input form-control form-control-sm" type="file" id="image" name="image" />
              <img class="image-detail" src="/images/products/<%= image %>?_method=PUT" method="POST" alt="">
            </div>

            <div class="form-group">
            <!-- brand -->
              <label class="form-group__label">Categoria:</label>
              <select class="form-select" name="brand" id="gender" selected>
                <% categories.forEach(category=> { %>
                  <option value="<%= category.id %>" <%=category_id==category.id && 'selected' %>>
                    <%= category.brand %>
                  </option>
                  <% }) %>

              </select>
            </div>
          </div>
          <div class="form-group">
          <!-- description -->
            <label class="form-group__label" for="description">Descripci√≥n:</label>
            <textarea class="form-control <%= locals.errors && (errors.description && 'is-invalid') %>" id="description" name="description" style="height: 100px;"><%= description %></textarea>
            <small class="text-danger ms-2" id="msgError-description">
              <%= locals.errors && (errors.description && errors.description.msg) %>
            </small>
          </div>
          <div class="form-group-checkbox">
            <label class="form-group__label" for="size">Talles:</label>
            <div class="content-checkbox">
              <label class="form-check-label"><input class="form-check-input" type="checkbox" name="size" value="38" /> 38</label>
              <label class="form-check-label"><input class="form-check-input" type="checkbox" name="size" value="39" /> 39</label>
              <label class="form-check-label"><input class="form-check-input" type="checkbox" name="size" value="40" /> 40</label>
            </div>
          </div>

            <h3 class="text-danger text-center" id="msgError-empty"></h3>



          <button class="form-button btn-purple" type="submit">Guardar Producto</button>
        </form>

      </div>
        <%- include('partials/footer')%>
    </div>
    <!-- AOS -->
    <script>
      AOS.init();
    </script>
    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <!-- boostrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"></script>
      <script src="/js/editProducts.js"></script>
  </body>

</html>
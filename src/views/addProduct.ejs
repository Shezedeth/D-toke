<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', {title: 'Form' }) %>

  <body class="container-product">
    <div class="container-product-content">
      <%- include('partials/header')%>
        <div class="container">
          <form class="product-form shadow card" action="/admin/addProduct" method="POST" enctype="multipart/form-data" id="formAdd">
          
            <h1 class="container-title card-title">Ingresar un Producto</h1>
            <div class="product-form-contentNamePrice">
              <div class="form-group">
                <label class="form-group__label" for="name">Nombre del producto:</label>
                <input class="form-control <%= locals.errors && (errors.name && 'is-invalid') %>" type="text" id="name" name="name" value="<%= locals.old && (old.name && old.name ) %>" />
                <small class="text-danger ms-2" id="msgError-name">
                  <%= locals.errors && (errors.name && errors.name.msg) %>
                </small>
              </div>
              <div class="form-group">
                <label class="form-group__label" for="price">Precio:</label>
                <input class="form-control <%= locals.errors && (errors.price && 'is-invalid') %>" type="number" id="price" name="price" step="0.01" value="<%= locals.old && (old.price && old.price ) %>"/>
                <small class="text-danger ms-2" id="msgError-price">
                  <%= locals.errors && (errors.price && errors.price.msg) %>
                </small>
              </div>
            </div>
            <div class="product-form-contentNamePrice">
              <div class="form-group">
                <label class="form-group__label" for="image">Subir imagenes:</label>
                <input class="form-group__input form-control form-control-sm" type="file" id="image" name="image" />
              </div>

              <div class="form-group">
                <label class="form-group__label">Categoria:</label>
                <select class="form-select" name="gender" id="gender" selected>
                  <option value="Nike">Nike</option>
                  <option value="Adidas">Adidas</option>
                  <option value="Puma">Puma</option>
                  <option value="Reebok">Reebok</option>

                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="form-group__label" for="description">Descripci√≥n:</label>
              <textarea class="form-control <%= locals.errors && (errors.description && 'is-invalid') %>" id="description" name="description" style="height: 100px;" value="<%= locals.old && (old.price && old.description ) %>"></textarea>
              <small class="text-danger ms-2" id="msgError-description">
                <%= locals.errors && (errors.description && errors.description.msg) %>
              </small>
            </div>

            <div class="form-group-checkbox">
              <label class="form-group__label" for="size">Talles:</label>
              <div class="content-checkbox">
                <label class="form-check-label"><input class="form-check-input" type="checkbox" name="size" value="38" /> 38</label>
                <label class="form-check-label"><input class="form-check-input" type="checkbox" name="size" value="39" /> 39</label>
                <label class="form-check-label"><input class="form-check-input" type="checkbox" name="size" value="40" /> 40</label>
              </div>
            </div>
            


            <button class="form-button btn-purple" type="submit">Guardar Producto</button>
          </form>
        </div>
        <%- include('partials/footer')%>
    </div>
    <!-- AOS -->
    <script>
      AOS.init();
    </script>
    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <!-- boostrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"></script>
      <script src="/js/addProdcuts.js"></script>
  </body>

</html>
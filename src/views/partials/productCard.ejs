<article class="home__main__section__cards-product">
    <div class="home__main__section__cards-img">
        <a href="/productDetail/<%= id %>">
            <img src="/img/home-main/<%= image || 'default-image.png' %>" alt="imagen de producto">
        </a>
        <div class="home__main__section__card-product-heart">
            <i class="fa-regular fa-heart"></i>

        </div>
    </div>
    <div class="home__main__section__cards-text">
        <h5 class="home__main__section__cards-description">
            <%= name %>
        </h5>
        <p class="home__main__section__cards-price">
            $<%= price %>
        </p>
    </div>

</article>